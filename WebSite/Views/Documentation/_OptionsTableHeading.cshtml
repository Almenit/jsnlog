@using ViewExtensions

@{
    bool showTypeColumn =
        ((string)(ViewData["configSource"]) != "web.config");
    string memberName =
        ((string)(ViewData["configSource"]) != "web.config") ? "Field" : "Attribute";
}

<thead>
    <tr>
        <th>@memberName</th>
        @if (showTypeColumn) { <th>Type</th> }
        <th style="width: 100px">Default</th>
        <th>Description</th>
    </tr>
</thead>

